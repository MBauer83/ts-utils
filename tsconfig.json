{
    "compilerOptions": {
        "incremental": true,
        "target": "ESNext",
        "module": "ESNext",
        "allowJs": true,
        "checkJs": false,
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "sourceMap": true,
        "strict": true,
        "alwaysStrict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "lib": [
            "es6",
            "ESNext"
        ]
      },
      "include": ["src"],
      "exclude": ["node_modules", "tests"]
}
